<h1>(GeekPlayer)</h1>
<h3>新規Player</h3>
<%= form_for @player do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :explanation  %>
    <%= f.text_area :explanation, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :nationality %>
    <%= f.text_field :nationality, :size => 30 %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", players_path %>